<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Image data</th>
      <th>User</th>
      <th>Description</th>
      <th>Time Added</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag(photo.image_url(:thumb), width: "80") %></td>
        <td><%= photo.user_id %></td>
        <td><%= photo.description %></td>
        <td><%= time_ago_in_words(photo.created_at) %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
